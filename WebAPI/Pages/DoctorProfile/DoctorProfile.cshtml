@page "{id:int?}"
@model WebApi.Pages.DoctorProfile.DoctorProfileModel

@{
    ViewData["Title"] = "Doctor Profile";
}

<div class="container mx-auto my-10 px-4">
    <h1 class="text-2xl font-bold mb-6">Edit Doctor Profile</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-300 text-green-800 px-4 py-3 rounded mb-4">
            <strong>Success:</strong> @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-300 text-red-700 px-4 py-3 rounded mb-4">
            <strong>Error:</strong> @TempData["ErrorMessage"]
        </div>
    }

    <form method="post">
        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div class="mb-4">
                <label asp-for="Doctor.userId" class="block text-gray-700 text-sm font-bold mb-2">User ID</label>
                <input asp-for="Doctor.userId" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" readonly />
            </div>

            <div class="mb-4">
                <label asp-for="Doctor.departmentId" class="block text-gray-700 text-sm font-bold mb-2">Department ID</label>
                <input asp-for="Doctor.departmentId" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" />
                <span asp-validation-for="Doctor.departmentId" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Doctor.doctorRating" class="block text-gray-700 text-sm font-bold mb-2">Doctor Rating</label>
                <input asp-for="Doctor.doctorRating" step="0.1" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" />
                <span asp-validation-for="Doctor.doctorRating" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Doctor.licenseNumber" class="block text-gray-700 text-sm font-bold mb-2">License Number</label>
                <input asp-for="Doctor.licenseNumber" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" />
                <span asp-validation-for="Doctor.licenseNumber" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="flex items-center justify-between">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Save Changes
                </button>
                <a asp-page="/Index" class="inline-block align-baseline font-bold text-sm text-blue-600 hover:text-blue-800">
                    Cancel
                </a>
            </div>
        </div>
    </form>
</div>