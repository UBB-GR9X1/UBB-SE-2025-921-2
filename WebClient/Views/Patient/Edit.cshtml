@model ClassLibrary.Model.PatientJointModel
@{
    ViewData["Title"] = "Edit Doctor Profile";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Adjust if using a different layout
}

<!-- Add CSS Styles -->
<style>
    /* Same CSS as your original message, unchanged */
    /* ... */
</style>

<div class="container-fluid px-0">
    <!-- Edit Header -->
    <div class="edit-header text-center position-relative">
        <a href="@Url.Action("Profile", "Patient", new { userId = Model.userId })" class="btn back-to-profile">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <h1 class="display-4 mb-2">Edit Profile</h1>
                    <p class="lead">Update your professional information</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-custom alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-custom alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Validation Summary -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="validation-summary">
                <h6><i class="fas fa-exclamation-triangle"></i>Please correct the following errors:</h6>
                <ul>
                    @foreach (var modelState in ViewData.ModelState.Values)
                    {
                        foreach (var error in modelState.Errors)
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="patientId" />
            <input type="hidden" asp-for="userId" />
            <input type="hidden" asp-for="registrationDate" />
            <input type="hidden" asp-for="password" />

            <!-- Basic Information -->
            <div class="card form-card">
                <div class="card-header">
                    <i class="fas fa-user-md me-2"></i>Basic Information
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" for="PatientName">
                                    <i class="fas fa-id-card"></i>Full Name
                                </label>
                                <input asp-for="patientName" class="form-control" placeholder="Enter your full name" />
                                <span asp-validation-for="patientName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Identity informations -->
            
            <div class="card form-card">
                <div class="card-header">
                    <i class="fas fa-id-badge me-2"></i>Identity Information
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="username" class="form-label"><i class="fas fa-user-tag"></i> Username</label>
                                <input asp-for="username" class="form-control" placeholder="Enter username" />
                                <span asp-validation-for="username" class="text-danger"></span>
                            </div>
                        </div>
                       
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="birthDate" class="form-label"><i class="fas fa-calendar-alt"></i> Birth Date</label>
                                <input asp-for="birthDate" type="date" class="form-control" value="@Model.birthDate.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="birthDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="cnp" class="form-label"><i class="fas fa-id-card-alt"></i> CNP</label>
                                <input asp-for="cnp" class="form-control" placeholder="Enter CNP" />
                                <span asp-validation-for="cnp" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Address info-->

            <div class="card form-card">
                <div class="card-header">
                    <i class="fas fa-map-marker-alt me-2"></i>Address
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="address" class="form-label"><i class="fas fa-home"></i> Address</label>
                        <input asp-for="address" class="form-control" placeholder="Enter address" />
                        <span asp-validation-for="address" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <!-- Contact Information -->
            <div class="card form-card">
                <div class="card-header">
                    <i class="fas fa-address-book me-2"></i>Contact Information
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" for="Mail">
                                    <i class="fas fa-envelope"></i>Email Address
                                </label>
                                <input asp-for="email" class="form-control" placeholder="Enter your email address" />
                                <span asp-validation-for="email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" for="PhoneNumber">
                                    <i class="fas fa-phone"></i>Phone Number
                                </label>
                                <input asp-for="phoneNumber" class="form-control" placeholder="Enter your phone number" />
                                <span asp-validation-for="phoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Medical info-->

            <div class="card form-card">
                <div class="card-header">
                    <i class="fas fa-notes-medical me-2"></i>Medical Information
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="emergencyContact" class="form-label"><i class="fas fa-user-friends"></i> Emergency Contact</label>
                                <input asp-for="emergencyContact" class="form-control" placeholder="Enter emergency contact" />
                                <span asp-validation-for="emergencyContact" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="bloodType" class="form-label"><i class="fas fa-tint"></i> Blood Type</label>
                                <input asp-for="bloodType" class="form-control" placeholder="Enter blood type" />
                                <span asp-validation-for="bloodType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="allergies" class="form-label"><i class="fas fa-allergies"></i> Allergies</label>
                                <input asp-for="allergies" class="form-control" placeholder="Enter known allergies" />
                                <span asp-validation-for="allergies" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="weight" class="form-label"><i class="fas fa-weight"></i> Weight (kg)</label>
                                <input asp-for="weight" type="number" step="0.01" class="form-control" placeholder="Enter weight" />
                                <span asp-validation-for="weight" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="height" class="form-label"><i class="fas fa-ruler-vertical"></i> Height (cm)</label>
                                <input asp-for="height" type="number" class="form-control" placeholder="Enter height" />
                                <span asp-validation-for="height" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>




            <!-- Action Buttons -->
            <div class="row mt-4 mb-5 justify-content-center">
                <div class="col-12 text-center">
                    <a href="@Url.Action("Profile", "Patient", new { userId = Model.userId})" class="btn btn-cancel">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-save">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Live avatar preview update
        document.getElementById("avatar-url-input").addEventListener("input", function () {
            const preview = document.getElementById("avatar-preview");
            const url = this.value;
            preview.src = url || "https://via.placeholder.com/150";
        });
    </script>
}
